<% if flash[:notice] %>
<%= flash[:notice] %>
         <% end %>

<%= render 'books/list',book:@book %>




    <% if @book.errors.any? %>
<h2><%= @book.errors.count %>件発生しました</h2>
<%= @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<table>
  <h1>Books</h1>
  <h4>Title</h4><h4>Opinion</h4>
  <% @books.each do |book| %>
  <li><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format:'jpeg', fallback:'no_image.jpg' %></li>
  <li><%=link_to book.book_title,book_path(book) %></li>
  <li><%= book.book_body %></li>
  <% end %>
</table>

