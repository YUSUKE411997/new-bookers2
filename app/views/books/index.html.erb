<h1>User info</h1>
<h4>image</h4>
<h4>name</h4>
<h4>introduction</h4>

<div>
  <h1>New book</h1>
  <%= form_with model: @book,local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :book_title %>
  <h4>Opinion</h4>
  <%= f.text_area :book_body %>
  <%= f.submit "Create Book" %>
  <% end %>
</div>


<table>
  <h1>Books</h1>
  <h4>Title</h4><h4>Opinion</h4>
  <%= @books.each do |book| %>
  <li><%=link_to book.book_title,book_path(book) %></li>
  <li><%= book.book_body %></li>
  <% end %>
</table>


