<% if flash[:notice] %>
<%= flash[:notice] %>
         <% end %>


<h1>User info</h1>
<%= attachment_image_tag current_user,:profile_image,:fill, 60, 60, format:'jpeg',fallback:'no_image.jpg' %>
<%= current_user.name %>
<%= current_user.introduction %>
<%= link_to "ユーザー編集",edit_user_path(current_user.id) %>


<div>
  <h1>New book</h1>

  <%= form_with model: @book,local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :book_title %>
  <h4>Opinion</h4>
  <%= f.text_area :book_body %>
  <%= f.submit "Create Book" %>
  <% end %>
</div>


    <% if @book.errors.any? %>
<h2><%= @book.errors.count %>件発生しました</h2>
<%= @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<table>
  <h1>Books</h1>
  <h4>Title</h4><h4>Opinion</h4>
  <% @books.each do |book| %>
  <li><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format:'jpeg', fallback:'no_image.jpg' %></li>
  <li><%=link_to book.book_title,book_path(book) %></li>
  <li><%= book.book_body %></li>
  <% end %>
</table>

