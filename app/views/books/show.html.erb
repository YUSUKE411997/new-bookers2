<main>
<div class="container px-5 px-sm-0" >
    <div class="row">

<% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>


<%= render 'books/list',book:@book_new,user:@book.user %>


<!--試しコード-->

<!--ここまで-->

<div class="col-md-8 offset-md-1">

<h1>Book detail</h1>
<table class="table table-striped table-inverse">
 <tbody>
   <tr>
<td>
  <%= link_to user_path(@book.user.id) do %>
  <%= attachment_image_tag @book.user,:profile_image,:fill, 60, 60, format:'jpeg',fallback:'no_image.jpg' %></br>
  <%= @book.user.name %>
  <% end %>
</td>
<td><%= link_to @book.title,book_path(@book) %></td>
<td><%= @book.body %></td>

<% if @book.user == current_user %>
<td><%= link_to "Edit", edit_book_path(@book) %></td>
<td><%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "Are you sure ?" %></td>
<% end %>
</tr>
</tbody>
</table>

</div>
</div>
</div>
</main>