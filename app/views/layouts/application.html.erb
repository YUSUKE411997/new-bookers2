<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  
  
  

    

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <span class="navbar-brand"><%= link_to "Bookers",root_path %></span>
          
          
          
          
          
        <div class="navbar-collapse collapse show" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
           
    
    
    <% if user_signed_in? %>
    
    <li class="text-light nav-link"><%= link_to  user_path(current_user.id) do %>
    <i class="fas fa-home"></i>Home<% end %></li>
    
    
    <li class="text-light nav-link"><%= link_to  users_path do %>
    <i class="fas fa-users"></i>Users<% end %></li>
    
    
    <li class="text-light nav-link"><%= link_to  books_path do %>
    <i class="fas fa-book-open"></i>Books<% end %></li>
    
    <li class="text-light nav-link"><%= link_to destroy_user_session_path,method: :delete do %>
    <i class="fas fa-sign-out-alt">logout</i><% end %></li>
    
    
    <% else %>
    
    <li class="text-light nav-link"><%= link_to  root_path do %>
    <i class="fas fa-home"></i>Home<% end %></li>
    
    <li class="text-light nav-link"><%= link_to home_about_path do %>
    <i class="fas fa-link">About</i><% end %></li>
    
    <li class="text-light nav-link"><%= link_to new_user_registration_path do %>
    <i class="fas fa-user-plus">sign up</i><% end %></li>
    
    <li class="text-light nav-link"><%= link_to new_user_session_path do %>
    <i class="fas fa-sign-in-alt">login</i><% end %></li>
    
    <% end %>
    
    
    
    </ul>
    </div>
    
    
    </div>
    </nav>
    </header>
  
  <% if flash[:notice] %>
<%= flash[:notice] %>
         <% end %>

</body>
  <%= yield %>
  
    <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  
  
  
</html>



