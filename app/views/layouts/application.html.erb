<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  
  
  

    

  <body>
    <header style="background-color: red;">
      <nav class="navbar navbar-expand-lg navbar-light">
        <h3><%= link_to "Bookers",root_path %></h3>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
           
    
    
    <% if user_signed_in? %>
    
    <li class="nav-item"><%= link_to  user_path(current_user.id) do %>
    <i class="fas fa-home"></i>Home<% end %></li>
    
    
    <li class="nav-item"><%= link_to  users_path do %>
    <i class="fas fa-user-tag"></i>Users<% end %></li>
    
    
    <li class="nav-item"><%= link_to  books_path do %>
    <li class="fas fa-quran">Books</li><% end %></li>
    
    <li class="nav-item"><%= link_to destroy_user_session_path,method: :delete do %>
    <i class="fas fa-sign-in-alt">logout</i><% end %></li>
    
    
    <% else %>
    
    <li class="nav-item"><%= link_to  root_path do %>
    <i class="fas fa-home"></i>Home<% end %></li>
    
    <li class="nav-item"><%= link_to home_about_path do %>
    <i class="fas fa-eye">About</i><% end %></li>
    
    <li class="nav-item"><%= link_to new_user_registration_path do %>
    <i class="fas fa-user-plus">sign up</i><% end %></li>
    
    <li class="nav-item"><%= link_to new_user_session_path do %>
    <i class="fas fa-sign-in-alt">login</i><% end %></li>
    
    <% end %>
    
    
    
    </ul>
    </div>
    </nav>
    </header>
  </body>
  <% if flash[:notice] %>
<%= flash[:notice] %>
         <% end %>
  <footer>
    <h5>CopyRight Infratop.inc</h5>
  </footer>
  
  <%= yield %>
  
  
  
  
  
</html>



